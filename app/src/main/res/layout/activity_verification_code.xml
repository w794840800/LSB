            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_keyboard5"
            android:background="@drawable/shape_keyborditem"
            android:text="5"
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_keyboard6"
            android:background="@drawable/shape_keyborditem"
            android:text="6"
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_keyboard7"
            android:background="@drawable/shape_keyborditem"
            android:text="7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_keyboard8"
            android:background="@drawable/shape_keyborditem"
            android:text="8"
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_keyboard9"
            android:background="@drawable/shape_keyborditem"
            android:text="9"
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_keyboard_null"
            android:background="@drawable/shape_keyborditem"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_keyboard0"
            android:background="@drawable/shape_keyborditem"
            android:text="0"
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_keyboard_del"
            android:background="@drawable/shape_keyborditem"
            android:text=""
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>











</RelativeLayout>