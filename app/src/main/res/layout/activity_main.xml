<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <!--<RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <com.example.niu.lsb.view.CircleRunView

           android:layout_width="50dp"
           android:layout_height="50dp" />
   </RelativeLayout>-->


    <FrameLayout
        android:visibility="visible"
      android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--mapview-->
        <RelativeLayout
            android:id="@+id/main_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >

            <com.amap.api.maps.MapView
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:src="@mipmap/ic_launcher"

                />
        </RelativeLayout>
         <!--主界面-->
        <RelativeLayout
            android:id="@+id/home_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:background="#fff"

                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/main_account"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                     android:src="@drawable/home_top_user_unselect"
                    />
                <LinearLayout
                    android:id="@+id/logo_city"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/logo"
                       android:src="@drawable/logo"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="."
                         android:textColor="#000"
                         android:textSize="16sp"
                         android:gravity="center"
                         android:layout_marginBottom="5dp"
                         android:layout_gravity="center"
                         android:layout_marginLeft="10dp"
                         />

                 <TextView
                     android:id="@+id/home_cityname"
                     android:layout_width="wrap_content"
                     android:text="合肥市"
                     android:textColor="#000"
                     android:textSize="16sp"
                     android:drawableRight="@drawable/fontdown"
                          android:layout_gravity="center"
                     android:layout_height="wrap_content" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/gift"
                    android:src="@drawable/gift"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:background="#e3e3e3"
                    android:layout_height="2dp"/>
            </RelativeLayout>

         <RelativeLayout
             android:id="@+id/bottom_menu"
             android:visibility="visible"
             android:layout_width="match_parent"
             android:layout_height="170dp"
             android:paddingTop="10dp"
             android:layout_alignParentBottom="true"
             >
             辅助底部白边
               <View
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:background="#fff"
                   android:layout_alignParentBottom="true"
                   />

             <!--三个菜单 帮我买送取-->
             <LinearLayout

                 android:id="@+id/three_menu"
                 android:visibility="visible"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="#fff"
                 android:paddingBottom="10dp"
                 android:layout_alignParentBottom="true"
                 android:layout_marginLeft="15dp"
                 android:paddingTop="15dp"
                 android:layout_marginRight="15dp"
                 >

                  <LinearLayout
                    android:gravity="center"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_height="match_parent">
                       <ImageView
                           android:layout_width="48dp"
                           android:layout_height="48dp"
                           android:src="@drawable/z_sendtype_item1_normal"
                           />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="帮我买"
                            />

                  </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:layout_height="match_parent">
                     <ImageView
                         android:layout_width="48dp"
                         android:layout_height="48dp"
                         android:src="@drawable/z_sendtype_item0_normal"
                         />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="帮我送"
                         />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:layout_height="match_parent">
                     <ImageView
                         android:layout_width="48dp"
                         android:layout_height="48dp"
                         android:src="@drawable/z_sendtype_item3_normal"
                         />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="帮我取"
                         />

                 </LinearLayout>

             </LinearLayout>

      <LinearLayout
          android:id="@+id/other_menu"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_alignParentBottom="true"
          android:background="#fff"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:visibility="gone">

          <LinearLayout
              android:gravity="center"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_height="match_parent">
              <ImageView
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:src="@drawable/z_sendtype_item4_normal"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="帮我排队"
                  />

          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_height="match_parent">
              <ImageView
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:src="@drawable/z_sendtype_item7_normal"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="米乐帮帮"
                  />

          </LinearLayout>

      </LinearLayout>


         </RelativeLayout>


        </RelativeLayout>
        <!--中间区域-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/center_cursor"
                android:layout_width="36dp"
                android:layout_centerInParent="true"
                android:layout_height="36dp"
                android:visibility="visible"
                android:src="@drawable/icon_home_location_normal"/>
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_above="@id/center_cursor"
                android:layout_width="wrap_content"

                android:layout_height="72dp">
                <com.example.niu.lsb.view.CircleRunView
                    android:layout_width="50dp"
                    android:layout_height="30dp" />



               <TextView
                   android:id="@+id/surround_runnng"
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   android:text="附近有0位跑男\n等待为你服务"
                   android:ellipsize="end"
                   android:singleLine="true"
                   android:textSize="14sp"

                   />
            </LinearLayout>

            <com.example.niu.lsb.view.SlipeOnMoreView
                android:id="@+id/slipeOnmoreview"
                android:layout_width="40dp"
                android:background="#fff"

                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/center_cursor"
                android:layout_alignStart="@+id/center_cursor"
                android:layout_marginBottom="80dp" />


        </RelativeLayout>


    </FrameLayout>







    <fragment
        android:layout_gravity="left"
        android:id="@+id/slide_menu"
        android:name="com.example.niu.lsb.SlideMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</android.support.v4.widget.DrawerLayout>
